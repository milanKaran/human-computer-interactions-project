<Window x:Class="_481Project.TwoWelcomeScreenKaren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_481Project"
        mc:Ignorable="d"
        Title="TwoWelcomeScreenKaren" Height="458" Width="800">
    <Grid Height="450" Width="800">
        <Image x:Name="homeScreenImage" Height="387" Margin="123,0,124,0" VerticalAlignment="Top" Source="icons/logo_cpsc481.png"/>
        <Label x:Name="homeLabel" Content="CLICK ANYWHERE TO BEGIN!" Margin="74,0,18,31" FontWeight="Bold" FontSize="36" VerticalAlignment="Bottom" FontFamily="Ravie" Background="{x:Null}" Foreground="#FFE4A66B"/>
        <Button x:Name="actionButtonWelcomeScreen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="792" Height="419" Click="Begin">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.OpacityMask>
                <ImageBrush/>
            </Button.OpacityMask>

        </Button>
    </Grid>
</Window>
