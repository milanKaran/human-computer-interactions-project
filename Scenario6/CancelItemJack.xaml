<Window x:Class="_481Project.CancelItemJack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_481Project"
        mc:Ignorable="d"
        Title="CancelItemJack" Height="150" Width="267">
    <Grid>
        <Button x:Name="NoButton" Content="No, keep it" HorizontalAlignment="Left" Margin="14,69,0,0" VerticalAlignment="Top" Width="90" Click ="NoClicked" Background="IndianRed" FontSize="7"/>
        <TextBox HorizontalAlignment="Left" Height="41" Margin="27,10,0,0" TextWrapping="Wrap" Text="This will remove the selected item from your order&#xD;&#xA;&#xD;&#xA;Do you wish to remove Ice-Cream from your order?" VerticalAlignment="Top" Width="195" FontSize="8"/>
        <Button x:Name="YesButton" Content="Yes, remove it" HorizontalAlignment="Left" Margin="156,69,0,0" VerticalAlignment="Top" Width="90" Click ="YesClicked" FontSize="7" Background="#FF3AB74D"/>

    </Grid>
</Window>
